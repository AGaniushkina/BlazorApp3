    private async Task GetPassengers()
    {
        var request = new HttpRequestMessage
            {
                Method = HttpMethod.Get,
                RequestUri = new Uri("https://localhost:7123/api/passengers/all")
            };

        using (var response = await client.SendAsync(request))
        {
            response.EnsureSuccessStatusCode();
            var body = await response.Content.ReadAsStringAsync();
            if (body != null)
                Passengers = JsonConvert.DeserializeObject<IEnumerable<Passenger>>(body).ToList();
        }
    }

    private async Task GetFlights()
    {
        await GetPassengers();
        string? passengerId = Passengers.Where(r => r.DocumentSeriesAndNumber == Model!.Id
                                && r.Email == Model!.login)
                                .Select(r => r.Id).SingleOrDefault();

        var requestPassengers = new HttpRequestMessage
            {
                Method = HttpMethod.Get,
                RequestUri = new Uri($"https://localhost:7123/api/passengerflights?passengerId={passengerId}")
            };
        

        using (var response = await client.SendAsync(requestPassengers))
        {
            var body = await response.Content.ReadAsStringAsync();
            if (body != null)
                PassengerFlights = JsonConvert.DeserializeObject<IEnumerable<PassengerFlight>>(body).ToList();
        }
    }
