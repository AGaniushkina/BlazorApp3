@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Forms
@using Smart.Blazor;
@using BlazorApp2.Shared;
@using Newtonsoft.Json;
@inject HttpClient client;

<style>
	.basic-input {
		width: 100%;
	}

	.basic-input + .basic-input {
		margin-top: 10px;
	}

	.options-container {
		display: flex;
		flex-direction: column;
	}

    .container {
        display: flex;
        padding: 5px;
    }

	.info-text {
		margin-bottom: 5px;
		margin-top: 3px;
	}
</style>

<div class="booking-container">
	<h3>Бронирование рейса @Flight?.FlightNumber (@Flight?.Price руб.)</h3>
	<p class="info-text">
		Пожалуйста, введите данные латинскими буквами
	</p>
	<EditForm Model="@Passenger" OnSubmit="Submit">
    <div class="container">
		<Input 
			Style="margin: 10px;" 
			class="basic-input" 
			Placeholder="Фамилия" 
			@bind-Value="Passenger.LastName" />
		<Input 
			Style="margin: 10px;" 
			class="basic-input" 
			Placeholder="Имя"
			@bind-Value="Passenger.FirstName" />
		<Input 
			class="basic-input" 
			Placeholder="Отчество"
			@bind-Value="Passenger.Patronymic" />
    </div>
	<div class="container">
		<div class="options-container">
			<RadioButton OnChange="@(() => Passenger.Sex = GenderEnum.Male)">Мужской</RadioButton>
			<RadioButton OnChange="@(() => Passenger.Sex = GenderEnum.Female)">Женский</RadioButton>
		</div>
	</div>
	<p class="info-text">Информация о паспорте</p>
	<div class="container">
			<DateInput 
				Style="margin: 10px;" 
				Class="basic-input" 
				Locale="ru" 
				@bind-Value="Passenger.DateOfIssue" />
			<Input 
				Class="basic-input" 
				Placeholder="Серия и номер" 
				@bind-Value="Passenger.DocumentSeriesAndNumber" />
	</div>
	<p class="info-text">Контактные данные для заказа</p>
	<div class="container">
		<Input 
			Style="margin: 10px;" 
			Class="basic-input" 
			Placeholder="Почта"
			@bind-Value="Passenger.Email" />
		<Input 
			Class="basic-input" 
			Placeholder="Номер телефона"
			@bind-Value="Passenger.PhoneNumber" />
	</div>
		<Button Style="display: flex; justify-content: flex-end;"
				Class="primary outlined small" type="submit" @* OnClick="@Book" *@>
				Забронировать
		</Button>
	</EditForm>
	<h3>@message</h3>
</div>

@code {
	[Parameter]
	public Flight? Flight { get; set; }
	Passenger Passenger { get; set; } = new Passenger();
	string message = "";

	protected override void OnInitialized()
	{
		Passenger ??= new();
	}

	void Submit()
	{
		message = $"Name: {Passenger?.LastName} Age: {Passenger?.DocumentSeriesAndNumber} gender: {Passenger?.Sex} dateOfIssue: {Passenger?.DateOfIssue}";
